[Unit]
Description=AI Trading Bot
After=network.target

[Service]
User=your_user_name
WorkingDirectory=/path/to/usr/project/directory
ExecStart=/path/to/python3 /path/to/usr/project/directory/bot.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=ai_trading_bot

[Install]
WantedBy=multi-user.target
